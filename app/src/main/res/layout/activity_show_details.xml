<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/guide2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <android.support.constraint.Guideline
                android:id="@+id/guide4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <android.support.constraint.Guideline
                android:id="@+id/guide5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <android.support.constraint.Guideline
                android:id="@+id/guide6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <android.support.constraint.Guideline
                android:id="@+id/guide7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <android.support.constraint.Guideline
                android:id="@+id/guide8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7" />

            <android.support.constraint.Guideline
                android:id="@+id/guide9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />

            <android.support.constraint.Guideline
                android:id="@+id/guide10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

            <android.support.constraint.Guideline
                android:id="@+id/guide11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <android.support.constraint.Guideline
                android:id="@+id/guide12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />
            <android.support.constraint.Guideline
                android:id="@+id/guide14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <android.support.constraint.Guideline
                android:id="@+id/guide15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.60" />
            <android.support.constraint.Guideline
                android:id="@+id/guide13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />


            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="126dp"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/guide4"
                app:layout_constraintEnd_toStartOf="@+id/guide14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:gravity="bottom|left|center_horizontal|center"
                android:text="@string/movie_title"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guide14"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guide4" />

            <TextView
                android:id="@+id/tv_ratinglabel"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="bottom|left|end"
                android:text="@string/movie_rating"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/guide2"
                app:layout_constraintEnd_toStartOf="@+id/guide15"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide14"
                app:layout_constraintTop_toTopOf="@+id/guide1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="bottom|center|start"
                android:text="@string/movie_rating"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/guide2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guide15"
                app:layout_constraintTop_toTopOf="@+id/guide1"
                app:layout_constraintVertical_bias="0.0"
                tools:text="@string/movie_rating" />

            <TextView
                android:id="@+id/tv_releasedate_label"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_marginStart="8dp"
                android:gravity="top|left|end"
                android:text="@string/movie_release_date"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/guide4"
                app:layout_constraintEnd_toStartOf="@+id/guide15"
                app:layout_constraintStart_toStartOf="@+id/guide14"
                app:layout_constraintTop_toTopOf="@+id/guide2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:gravity="top|start"
                android:text="@string/movie_release_date"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/guide4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guide15"
                app:layout_constraintTop_toTopOf="@+id/guide2"
                tools:text="@string/movie_release_date" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/guide7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guide5"
                app:layout_constraintVertical_bias="0.01" />

            <TextView
                android:id="@+id/tv_plot"
                style="@style/Base.AlertDialog.AppCompat.Light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintVertical_bias="0.041" />

            <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:background="@color/transparent2"
                android:scaleType="fitCenter"
                android:src="@drawable/emptystar"
                app:layout_constraintBottom_toTopOf="@+id/guide5"
                app:layout_constraintEnd_toStartOf="@+id/guide12"
                app:layout_constraintHorizontal_bias="0.363"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guide4"
                app:layout_constraintVertical_bias="0.416" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/transparent2"
                android:scaleType="fitCenter"
                android:src="@drawable/fullstar"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guide5"
                app:layout_constraintEnd_toStartOf="@+id/guide12"
                app:layout_constraintHorizontal_bias="0.363"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guide4"
                app:layout_constraintVertical_bias="0.416"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/btn_trailer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:background="@color/transparent2"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/guide5"
                app:layout_constraintEnd_toStartOf="@+id/guide11"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guide12"
                app:layout_constraintTop_toTopOf="@+id/guide4"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/trailer" />

            <ImageButton
                android:id="@+id/btn_review"
                android:layout_width="69dp"
                android:layout_height="46dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/transparent2"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/guide5"
                app:layout_constraintEnd_toStartOf="@+id/guide13"
                app:layout_constraintStart_toStartOf="@+id/guide11"
                app:layout_constraintTop_toTopOf="@+id/guide4"
                app:srcCompat="@drawable/review" />

            <ImageButton
                android:id="@+id/btn_seen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:background="@color/transparent2"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/guide5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.277"
                app:layout_constraintStart_toStartOf="@+id/guide13"
                app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/seen" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>